{
  "mcpServers": {
    "mcp-atlassian": {
      "type": "local",
      "command": "node",
      "args": ["jira_mcp_server/index.js"],
      "tools": ["*"],
      "env": {
        "JIRA_URL": "${JIRA_URL}",
        "JIRA_API_TOKEN": "${JIRA_API_TOKEN}"
      }
    },
    "mcp-github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "tools": ["*"],
      "headers": {
        "Authorization": "Bearer ${GITHUB_MCP_TOKEN}"
      },
      "env": {
        "GITHUB_MCP_TOKEN": "${GITHUB_MCP_TOKEN}"
      }
    }
  }
}
